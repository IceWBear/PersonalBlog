    <section class="vs-blog-wrapper blog-details space-page">
        <div class="container">
            <div class="row gx-60">
                <div class="col-xl-8 col-lg-7">
                    <div class="vs-blog blog-single wow fadeInUp" data-wow-delay="0.1s">
                        <!--Blog o day-->
                        <div class="blog-img">
                            <img src="@ViewBag.blog.Image" alt="BLog Img">
                        </div>
                        <div class="blog-content">
                            <div class="blog-meta">
                                <span><i class="fal fa-calendar-alt"></i><a href="blog-details.html">@ViewBag.blog.UpdateDate</a></span>
                                <span><i class="fal fa-user-tag"></i>by <a href="blog-details.html">@ViewBag.blog.Account.Name</a></span>
                                <span><i class="fal fa-folder-open"></i><a href="blog-details.html"></a><a href="blog-details.html">@ViewBag.blog.Category.CategoryName</a></span>
                                <span><i class="fal fa-comments"></i><a href="#chuyenden">@ViewBag.count Comments</a></span>
                            </div>
                            <h2 class="blog-title">@ViewBag.blog.Tilte</h2>
                            <p>@ViewBag.blog.BlogDetail</p>
                        </div>
                        <!--Blog o day-->
                        <!--Tac gia o day-->
                        <div class="blog-author d-md-flex align-items-center wow fadeInUp" data-wow-delay="0.1s">
                            <div class="media-img">
                                <img src="@ViewBag.author.Avatar" alt="Blog Author">
                            </div>
                            <div class="media-body">
                                <p class="author-degi">Written by</p>
                                <h3 class="author-name"><a href="blog.html">@ViewBag.author.Name</a></h3>
                                <p class="author-text mb-0">@ViewBag.author.Email</p>
                            </div>
                        </div>
                        <!--Tac gia o day-->
                        <!-- Comment Start -->
                        <div id="chuyenden" class="vs-comment-wrap wow fadeInUp" data-wow-delay="0.1s">
                            <h3 class="blog-inner-title">@ViewBag.count Comments</h3>
                            <ul class="comment-list">
                                @{
                                    string sname = null;
                                }
                                @foreach (Comment cm in Model)
                                {
                                    if (sname == null || !cm.Account.Name.Equals(sname))
                                    {
                                        <li class="vs-comment">                                         
                                            <div class="vs-post-comment">
                                                <div class="comment-avater"><img src="@cm.Account.Avatar" alt="Comment Author"></div>
                                                <div class="comment-content">
                                                    <h4 class="name">@cm.Account.Name</h4>
                                                    <p class="text">@cm.Commentdate.Value.ToString("mm/dd/yyyy")</p>
                                                    <p class="text">@cm.CommentDetail</p>
                                                    <div class="reply_and_edit">
                                                        <a href="#denday"> Reply</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    }                                   
                                    else if (sname != null &&  cm.Account.Name.Equals(sname))
                                    {
                                        <li class="vs-comment">
                                            <div class="vs-post-comment">
                                                <div class="comment-content">
                                                    <p class="text">@cm.Commentdate.Value.ToString("mm/dd/yyyy")</p>
                                                    <p class="text">@cm.CommentDetail</p>
                                                    <div class="reply_and_edit">
                                                        <a href="#denday"> Reply</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                    if (cm != null)
                                    {
                                        sname = cm.Account.Name;
                                    }

                                }
                                @if (ViewBag.login != null)
                                {
                                    <div class="vs-comment-form wow fadeInUp" data-wow-delay="0.1s">
                                        <div class="form-title">
                                            <div class="comment-avater"><img style="width:150px" src="@ViewBag.login.Avatar" alt="Comment Author"></div>
                                            <h3 class="blog-inner-title">Leave a Comment</h3>
                                        </div>
                                        <form id="denday" asp-controller="Home" asp-action="BlogDetail" asp-route-blogid="@ViewBag.blog.BlogId" asp-route-cmid="@ViewBag.cmr" method="post">
                                            <div class="row">
                                                <div class="col-12 form-group">
                                                    <input name="comment" placeholder="Write a Comment" class="form-control style2"></input>
                                                    <i class="far fa-pencil-alt"></i>
                                                </div>
                                                <div class="col-12 form-group">
                                                    <button type="submit" class="vs-btn"><i class="fal fa-paper-plane"></i> Post Comment</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <a asp-controller="Home" asp-action="Login"><h3>You must login to comment</h3></a>
                                }
                            </ul>
                        </div>

                        <!-- Comment Form -->




                    </div> <!-- / Blog end -->
                </div> <!-- / col-8 end -->
                <!-- Sidebar -->
                <div class="col-xl-4 col-lg-5">
