    <div class="popup-search-box d-none d-lg-block  ">
        <button class="searchClose border-theme text-theme"><i class="fal fa-times"></i></button>
        <form action="#">
            <input type="text" class="border-theme" placeholder="What are you looking for">
            <button type="submit"><i class="fal fa-search"></i></button>
        </form>
    </div>

    <!-- Side menu start -->
    <div class="sidemenu-wrapper">
        <div class="sidemenu-content">
            <button class="closeButton sideMenuCls"><i class="far fa-times"></i></button>
            <div class="widget footer-widget">
                <div class="vs-widget-about">
                    <div class="about-logo">
                        <a href="@Url.Action("Home", "Home")">
                            <img style=" width : 150px" src="assets/img/logo.png" alt=".Blog">
                        </a>
                    </div>
                </div>
            </div>
            <div class="widget footer-widget">
                <h3 class="widget_title">Contact Us</h3>
                <div class="vs-widget-contact">
                    <button type="button" class="vs-btn wave-btn style-1"><a asp-controller="Home" asp-action="Login">Login</a></button>
                    <button type="button" class="vs-btn wave-btn style-1"><a asp-controller="Home" asp-action="SignUp">SignUp</a></button>
                </div>
            </div>

            <div class="widget footer-widget">
                <h4 class="widget_title">News Feed</h4>
                @foreach (Blog nf in ViewBag.newfeed)
                {
                    <div class="recent-post-wrap">
                        <div class="recent-post">
                            <div class="media-img">
                                <a href="blog-details.html"><img src="@nf.Image" alt="Blog Image"></a>
                            </div>
                            <div class="media-body">
                                <div class="recent-post-meta"><a href="blog.html"><i class="fal fa-calendar-alt"></i> @nf.UpdateDate.Value.Date.ToString("dd/MM/yyyy")</a></div>
                                <h4 class="post-title"><a href="blog-details.html">@nf.Tilte</a></h4>
                            </div>
                        </div>
                    </div>
                }
            </div>


        </div>
