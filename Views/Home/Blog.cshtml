    <!--======== Blog Section ========-->
    <section class="vs-blog-wrapper space-page">
        <div class="container">
            <div class="row gx-60">
                <div class="col-xl-8 col-lg-7">
                    <!--Lam blog o day-->
                    @foreach (Blog b in Model)
                    {
                        <div class="vs-blog blog-single wow fadeInUp" data-wow-delay="0.1s">
                            <div class="blog-img">
                                <a href="blog-details.html">
                                    <img src="@b.Image" alt="BLog Img">
                                </a>
                            </div>
                            <div class="blog-content">
                                <div class="blog-meta">
                                    <a href="blog-details.html"><i class="fal fa-thumbs-up"></i>@b.NumOfLike</a>
                                    <a href="blog-details.html"><i class="fal fa-calendar-alt"></i>@b.UpdateDate</a>
                                </div>
                                <h3 class="blog-title"><a href="blog-details.html">@b.Tilte</a></h3>
                                <p class="blog-text">By: @b.Account.Name</p>
                                
                                <a asp-controller="Home" asp-action="BlogDetail" asp-route-blogid="@b.BlogId" class="link-btn">Read More <i class="far fa-long-arrow-right"></i></a>
                            </div>
                        </div>
                    }

                    <!--Lam blog o day-->
                    <!-- Blog End -->
                    <!-- Pagination -->
                </div> <!-- / Blog end -->
                <!-- Sidebar -->
                <div class="col-xl-4 col-lg-5">
                    <aside class="sidebar-area">
                        <div class="widget widget_categories wow fadeInUp" data-wow-delay="0.1s">
                            <h4 class="widget_title">Categories</h4>
                            @foreach (BlogCategory bc in ViewBag.category)
                            {
                                <ul>
                                    <li><a asp-controller="Home" asp-action="Blog" asp-route-id="@bc.CategoryId">@bc.CategoryName</a></li>
                                </ul>
                            }

                        </div>
                        <!--Lam popular post o day-->
                        <div class="widget wow fadeInUp" data-wow-delay="0.1s">
                            <h4 class="widget_title">Blog được yêu thích</h4>
                            @foreach (Blog bl in ViewBag.popular)
                            {
                                <div class="recent-post-wrap">
                                    <div class="recent-post">
                                        <div class="media-img">
                                            <a asp-controller="Home" asp-action="Detail"><img src="@bl.Image" alt="Blog Image"></a>
                                        </div>
                                        <div class="media-body">
                                            <h4 class="post-title"><a href="blog-details.html">@bl.Tilte</a></h4>
                                            <div class="recent-post-meta"><a href="blog.html"><i class="fal fa-calendar-alt"></i>@bl.UpdateDate</a></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!--Lam popular post o day-->
                        <!--Lam popular author o day-->
                        <div class="widget wow fadeInUp" data-wow-delay="0.1s">
                            <h4 class="widget_title">Bloger được yêu thích</h4>
                            @foreach (Account ac in ViewBag.ac)
                            {
                                <div class="recent-post-wrap">
                                    <div class="recent-post">
                                        <div class="media-img">
                                            <a><img style="width:63px;height:63px" src="@ac.Avatar" alt="Bloger được yêu thích"></a>
                                        </div>
                                        <div class="media-body">
                                            <h4 class="post-title"><a href="blog-details.html">@ac.Name</a></h4>
                                            <div class="recent-post-meta"><a href="blog.html"><i class="fal fa-envelope"></i>@ac.Email</a></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!--Lam popular author o day-->
                    </aside>
                </div>
            </div>
        </div>
    </section>
